<!--  if the user is not logged in, the page should show them a login link.
-->
<% if !session[:name].nil?%>
  <h1>Hi, <%= session[:name] %>.</h1>
  <%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
    <input type=submit value='logout'>
  <% end %>
<% else %>
  <%= link_to "Login here", login_url%>
<% end%>
